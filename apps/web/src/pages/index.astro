---
import Layout from './Layout.astro';
import { getReviews } from '../lib/sanity';

const posts = await getReviews();
---

<Layout title='Home - My Website'>
  <div class='container'>
    <section class='hero'>
      <h1>Welcome to My Website</h1>
      <p>Built with Astro, Sanity, and GSAP</p>
    </section>

    <section class='recent-posts'>
      <h2>Recent Posts</h2>
      <div class='posts-grid'></div>
    </section>
  </div>
</Layout>

<style lang='scss'>
  .hero {
    text-align: center;
    padding: $spacing-xl 0;

    h1 {
      font-size: 4rem;
      margin-bottom: $spacing-md;

      @include mobile {
        font-size: 2.5rem;
      }
    }

    p {
      font-size: 1.25rem;
      color: rgba($primary, 0.7);
    }
  }

  .recent-posts {
    margin-top: $spacing-xl;

    h2 {
      margin-bottom: $spacing-lg;
    }
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: $spacing-md;
  }

  .post-card {
    padding: $spacing-md;
    border: 1px solid rgba($primary, 0.1);
    border-radius: 8px;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;

    &:hover {
      transform: translateY(-4px);
      box-shadow: 0 10px 30px rgba($primary, 0.1);
    }

    h3 {
      margin-bottom: $spacing-sm;
    }
  }
</style>
